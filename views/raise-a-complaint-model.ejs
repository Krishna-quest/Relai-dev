<!-- The Modal -->
<div class="modal permission-modal fade " id="ComplaintModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form name="complaintform" id="complent_form" method="post" action="" enctype="multipart/form-data">

        <div class="modal-header text-center">
          <h2 class="modal-title w-100">Raise a Complaint</h2>
        </div>

        <div class="modal-body">
          <select class="form-control selectBox " style="height:55px" id="coms_complaint_for" name="coms_complaint_for"
            data-rule-required="true" data-msg-required="professional is required!">
            <option value="">Select professional</option>
            <%hiredProfeshnoalList.forEach(function(row){%>
              <option value="<%=row._id%>">
                <%=row.sps_fullname%>
              </option>
              <%});%>
          </select>
          <input type="hidden" name="cust_user_id" id="cust_user_id" value="<%= session.user_id %>">
          <input type="hidden" name="property_id" id="property_id" value="<%=propertyDetailData[0]._id%>">
          <input type="text" class="form-control  form-control-fix2" id="coms_complaint_subject" placeholder="Subject"
            name="coms_complaint_subject" data-rule-required="true" data-msg-required="Subject is required!">
          <textarea class="form-control  form-control-fix2" rows="3" name="coms_complaint_note" id="coms_complaint_note"
            placeholder="Add Notes"></textarea>
          <a href="#" class="upload-any float-right"><i class="fa fa-paperclip float-right" style="color:black"><span
                class="clip-icon">Attach
                files</span></i>
            <div class="custom-file-input">
              <input type="file" id="image" name="complaint_file" value="" required>
              <input type="button">
            </div>
            </span>
          </a>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-cancel" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-cancel complain_submit_btn" name="submit" data-dismiss="">Submit</button>
        </div>

      </form>
    </div>
  </div>

</div>